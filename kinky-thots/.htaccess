# =============================================
# SECURITY RULES
# =============================================

# Block access to sensitive files and directories
<FilesMatch "^\.">
    Require all denied
</FilesMatch>

<FilesMatch "\.(env|json|sh|sql|log|md|yml|yaml|lock|bak|old|orig|swp)$">
    Require all denied
</FilesMatch>

# Block access to package management files
<FilesMatch "^(package|composer|Dockerfile|Makefile)">
    Require all denied
</FilesMatch>

# Disable directory listing
Options -Indexes

# Disable server signature
ServerSignature Off

# =============================================
# CACHING RULES
# =============================================

# Prevent caching of HTML/PHP files
<FilesMatch "\.(html|php)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires 0
</FilesMatch>

# Cache static assets
<FilesMatch "\.(css|js)$">
    Header set Cache-Control "public, max-age=604800"
</FilesMatch>

<FilesMatch "\.(jpg|jpeg|png|gif|webp|ico|svg)$">
    Header set Cache-Control "public, max-age=2592000"
</FilesMatch>

# =============================================
# REWRITE RULES
# =============================================

RewriteEngine On

# Redirect old gallery.html to gallery.php
RewriteCond %{REQUEST_URI} ^/gallery\.html$ [NC]
RewriteRule ^(.*)$ /gallery.php [R=301,L]

# Block direct access to /gallery (without extension)
RewriteCond %{REQUEST_URI} ^/gallery/?$ [NC]
RewriteRule ^(.*)$ /gallery.php [R=302,L]

# Force HTTPS (uncomment when ready)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# =============================================
# SECURITY HEADERS
# =============================================

<IfModule mod_headers.c>
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

