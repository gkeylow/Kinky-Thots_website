# =============================================
# SECURITY RULES
# =============================================

# Block access to sensitive files and directories
<FilesMatch "^\.">
    Require all denied
</FilesMatch>

<FilesMatch "\.(env|json|sh|sql|log|md|yml|yaml|lock|bak|old|orig|swp)$">
    Require all denied
</FilesMatch>

# Block access to package management files
<FilesMatch "^(package|composer|Dockerfile|Makefile)">
    Require all denied
</FilesMatch>

# Block access to build config files
<FilesMatch "^(vite|tailwind|postcss)\.config\.">
    Require all denied
</FilesMatch>

# Disable directory listing
Options -Indexes

# Disable server signature
ServerSignature Off

# =============================================
# CACHING RULES
# =============================================

# Prevent caching of HTML/PHP files
<FilesMatch "\.(html|php)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires 0
</FilesMatch>

# Cache static assets - CSS/JS (7 days)
<FilesMatch "\.(css|js)$">
    Header set Cache-Control "public, max-age=604800, immutable"
</FilesMatch>

# Cache images (30 days)
<FilesMatch "\.(jpg|jpeg|png|gif|webp|ico|svg|avif)$">
    Header set Cache-Control "public, max-age=2592000, immutable"
</FilesMatch>

# Cache fonts (1 year)
<FilesMatch "\.(woff|woff2|ttf|otf|eot)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
</FilesMatch>

# Cache video/audio (30 days) - excludes HLS live stream files
<FilesMatch "\.(mp4|webm|ogg|mp3)$">
    Header set Cache-Control "public, max-age=2592000"
</FilesMatch>

# HLS live stream files - no caching (playlist updates every few seconds)
<FilesMatch "\.(m3u8)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
</FilesMatch>

# HLS segments - short cache (segments are unique per timestamp)
<FilesMatch "\.(ts)$">
    Header set Cache-Control "public, max-age=10"
</FilesMatch>

# =============================================
# REWRITE RULES
# =============================================

RewriteEngine On

# Block access to node_modules
RewriteRule ^node_modules/ - [F,L]

# Redirect .php to .html for pages that only exist as HTML
# (fixes browser-cached 301s from previous config)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.+)\.php$ /$1.html [R=302,L]

# Block direct access to /gallery (without extension)
RewriteCond %{REQUEST_URI} ^/gallery/?$ [NC]
RewriteRule ^(.*)$ /gallery.php [R=302,L]

# Force HTTPS (uncomment when ready)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# =============================================
# COMPRESSION
# =============================================

<IfModule mod_deflate.c>
    # Compress text, HTML, CSS, JavaScript
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript

    # Compress JSON, XML, and SVG
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/manifest+json
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# =============================================
# SECURITY HEADERS
# =============================================

<IfModule mod_headers.c>
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Permissions-Policy "camera=(), microphone=(), geolocation=(), payment=()"
</IfModule>

