server {
    server_name owncast.kinky-thots.xxx;

    location / {
        proxy_pass http://127.0.0.1:8080;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # WebSocket support (Owncast chat)
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_read_timeout 86400;

        # Allow embedding on kinky-thots.xxx
        proxy_hide_header X-Frame-Options;
        include /etc/nginx/snippets/security-headers.conf;
        proxy_hide_header Content-Security-Policy;
        add_header Content-Security-Policy "frame-ancestors https://kinky-thots.xxx https://owncast.kinky-thots.xxx" always;
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/owncast.kinky-thots.xxx/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/owncast.kinky-thots.xxx/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = owncast.kinky-thots.xxx) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name owncast.kinky-thots.xxx;
    return 404; # managed by Certbot


}
