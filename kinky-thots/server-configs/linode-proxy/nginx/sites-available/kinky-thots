# ============================================================
# kinky-thots.com — SFW Landing Page
# ============================================================
server {
    listen 443 ssl;
    server_name kinky-thots.com www.kinky-thots.com;

    ssl_certificate /etc/letsencrypt/live/kinky-thots.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/kinky-thots.com/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    location / {
        proxy_pass http://127.0.0.1:8081;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

server {
    listen 80;
    server_name kinky-thots.com www.kinky-thots.com;
    return 301 https://$host$request_uri;
}

# ============================================================
# kinky-thots.xxx — Main Adult Site
# ============================================================
server {
    listen 443 ssl;
    server_name kinky-thots.xxx www.kinky-thots.xxx;

    ssl_certificate /etc/letsencrypt/live/kinky-thots.xxx/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/kinky-thots.xxx/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    client_max_body_size 500m;

    location / {
        proxy_pass http://127.0.0.1:8081;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 300;
        proxy_connect_timeout 60;
        proxy_send_timeout 60;
    }

    # WebSocket support for chat
    location /ws/ {
        proxy_pass http://127.0.0.1:3003;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_read_timeout 86400;
    }

    # API endpoints
    location /api/ {
        proxy_pass http://127.0.0.1:3003;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 300;
        proxy_send_timeout 300;
        proxy_request_buffering off;
    }
}

server {
    listen 80;
    server_name kinky-thots.xxx www.kinky-thots.xxx;
    return 301 https://$host$request_uri;
}

# ============================================================
# mail.kinky-thots.com — Mail Server SSL
# ============================================================
server {
    listen 443 ssl;
    server_name mail.kinky-thots.com;

    ssl_certificate /etc/letsencrypt/live/mail.kinky-thots.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/mail.kinky-thots.com/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    location / {
        return 200 "Mail server - use IMAP/SMTP clients";
        add_header Content-Type text/plain;
    }
}

server {
    listen 80;
    server_name mail.kinky-thots.com;
    return 301 https://$host$request_uri;
}

# ============================================================
# photos.kinky-thots.xxx — Immich Photo Server
# ============================================================
server {
    listen 443 ssl;
    server_name photos.kinky-thots.xxx;

    ssl_certificate /etc/letsencrypt/live/photos.kinky-thots.xxx/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/photos.kinky-thots.xxx/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    client_max_body_size 50000M;

    location / {
        proxy_pass http://127.0.0.1:2283;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_read_timeout 600;
        proxy_send_timeout 600;
    }
}

server {
    listen 80;
    server_name photos.kinky-thots.xxx;
    return 301 https://$host$request_uri;
}

